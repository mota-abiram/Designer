rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Basic auth check
    function isAuthenticated() {
      return request.auth != null;
    }

    // Role detection based on verified email list
    // This matches the lists in src/services/adminList.ts and src/constants/assigners.ts
    function isManager() {
      return isAuthenticated() && 
        request.auth.token.email in [
          "abiram@digitalmojo.in", 
          "nagaraju@digitalmojo.in",
          "admin@digitalmojo.in"
        ];
    }
    
    // TASKS: Everyone can read/create/update, but only Managers can DELETE
    match /tasks/{taskId} {
      allow read, create, update: if isAuthenticated();
      allow delete: if isManager();
    }

    // QUOTAS: Designers can view progress, but only Managers can adjust targets
    match /quotas/{quotaId} {
      allow read: if isAuthenticated();
      allow write: if isManager();
    }

    // SYSTEM CONFIG (Brands, Types, Scopes): Read-only for Designers
    match /brands/{brandId} {
      allow read: if isAuthenticated();
      allow write: if isManager();
    }
    match /creativeTypes/{typeId} {
      allow read: if isAuthenticated();
      allow write: if isManager();
    }
    match /scopes/{scopeId} {
      allow read: if isAuthenticated();
      allow write: if isManager();
    }
  }
}
