rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Tasks: All authenticated users can read/write
    match /tasks/{taskId} {
      allow read, write: if isAuthenticated();
    }
    
    // Quotas: All authenticated users can read/write
    match /quotas/{quotaId} {
      allow read, write: if isAuthenticated();
    }
    
    // Brands, Creative Types, Scopes: All authenticated users can read/write
    match /brands/{brandId} {
      allow read, write: if isAuthenticated();
    }
    
    match /creativeTypes/{typeId} {
      allow read, write: if isAuthenticated();
    }
    
    match /scopes/{scopeId} {
      allow read, write: if isAuthenticated();
    }
  }
}
