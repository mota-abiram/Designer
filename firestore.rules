rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is an admin
    function isAdmin() {
      return request.auth != null && 
             request.auth.token.email in ['abiram@digitalmojo.in', 'nagaraju@digitalmojo.in'];
    }
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Tasks: All authenticated users can read/write their tasks
    match /tasks/{taskId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated();
    }
    
    // Quotas: All can read, only admins can write (modify targets)
    match /quotas/{quotaId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated(); // Allow all auth users for now since delivered counts update automatically
    }
    
    // Brands, Creative Types, Scopes: Read all, write for admins
    match /brands/{brandId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    match /creativeTypes/{typeId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    match /scopes/{scopeId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
  }
}
